{
  "manifest_version": 2,

  "applications": {
    "gecko": {
      "id": "materia-dark-theme@tiberius",
      "strict_min_version": "89.0"
    }
  },

  "name": "Materia Dark Theme",
  "version": "2022.6.23",
  "description": "Materia-dark GTK theme port for Firefox",

  "theme": {
    "colors": {
      "bookmark_text": "#dfdfdf",
      "button_background_active": "#1e1e1e",
      "button_background_hover": "#2e2e2e",
      "frame": "#272727", // Active title bar
      "frame_inactive": "#1e1e1e",
      "icons": "#dfdfdf",
      "icons_attention": "#1a73e8", // Link text
      "ntp_background": "#121212",
      "ntp_text": "#dfdfdf",
      "popup": "#1e1e1e",
      "popup_border": "#121212", // Normal background
      "popup_highlight": "#384252", // Selection background
      "popup_highlight_text": "#ffffff",
      "popup_text": "#dfdfdf", // Normal text
      "sidebar": "#272727", // Window background
      "sidebar_border": "#121212",
      "sidebar_highlight": "#384252",
      "sidebar_highlight_text": "#ffffff",
      "sidebar_text": "#dfdfdf",
      "tab_background_separator": "rgba(255, 255, 255, 0.5)",
      "tab_background_text": "#dfdfdf",
      "tab_line": "#8ab4f8", // Neutral Text
      "tab_loading": "#1a73e8", // Positive Text
      "tab_selected": "#272727",
      "tab_text": "#dfdfdf",
      "toolbar": "#121212",
      "toolbar_bottom_separator": "#1e1e1e",
      "toolbar_field": "#121212",
      "toolbar_field_border": "#121212",
      "toolbar_field_border_focus": "#8ab4f8",
      "toolbar_field_focus": "#1b1b1b",
      "toolbar_field_highlight": "#384252",
      "toolbar_field_highlight_text": "#ffffff",
      "toolbar_field_text": "#dfdfdf",
      "toolbar_top_separator": "#1e1e1e",
      "toolbar_vertical_separator": "#373b45"
    }
  }
}
